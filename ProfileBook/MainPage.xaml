<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProfileBook.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="20,20,20,20" CornerRadius="0" HasShadow="False">
            <Label Text="User SingIn" HorizontalTextAlignment="Left" TextColor="White" FontSize="16"/>
        </Frame>

        
  
        <Entry VerticalOptions="Center" HorizontalOptions="Fill"  Margin="20,150,20,0" x:Name="UserLogin" Placeholder = "Login" TextChanged="UserLogin_TextChanged" HorizontalTextAlignment="Start" VerticalTextAlignment="Center"/>
        <Entry VerticalOptions="Center" HorizontalOptions="Fill" Margin="20,0,20,20" x:Name="UserPassword"  Placeholder = "Password" IsPassword ="True" />
        <Label x:Name="textLabel" FontSize="Large" />
    <Button x:Name="SignIn" Margin="20,120,20,0" Text="SIGN IN" BackgroundColor="#2196F3" TextColor="White"  />


   </StackLayout>

</ContentPage>
